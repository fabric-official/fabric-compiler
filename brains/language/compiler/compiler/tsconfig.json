{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "lib",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "frontend/**/*.ts",
        "ir/**/*",
        "backend/**/*",
        "index.ts"
    ],
    "exclude": [
        "frontend/grammar.ts",
        "frontend/grammar.pegjs",
        "node_modules",
        "lib",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}